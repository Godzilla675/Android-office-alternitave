<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    tools:context=".ui.home.HomeFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_light"
        app:elevation="0dp"
        app:liftOnScroll="true">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_height"
            android:background="@android:color/transparent"
            app:title="@string/app_name"
            app:titleTextAppearance="@style/TextAppearance.Material3.HeadlineMedium"
            app:titleTextColor="@color/on_surface" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- Content wrapper to center content on large screens -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:maxWidth="@dimen/content_max_width"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/content_padding_horizontal"
                android:paddingBottom="88dp">

                <!-- Hero Card - Browse Files -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardOpenFile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="28dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardBackgroundColor="@color/primary_container"
                    app:cardCornerRadius="@dimen/hero_card_corner_radius"
                    app:cardElevation="0dp"
                    app:rippleColor="@color/primary">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="28dp">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            app:cardBackgroundColor="@color/primary"
                            app:cardCornerRadius="18dp"
                            app:cardElevation="0dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="16dp"
                                android:src="@drawable/ic_folder"
                                app:tint="@color/on_primary" />

                        </com.google.android.material.card.MaterialCardView>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="24dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/browse_files"
                                android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
                                android:textColor="@color/on_primary_container" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Open PDF, Word, PowerPoint, or other documents"
                                android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                                android:textColor="@color/on_primary_container"
                                android:alpha="0.8" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_arrow"
                            app:tint="@color/on_primary_container" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Quick Actions Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="Quick Actions"
                    android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                    android:textColor="@color/on_surface" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerQuickActions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="32dp"
                    android:clipToPadding="false"
                    android:overScrollMode="never"
                    tools:itemCount="5"
                    tools:listitem="@layout/item_quick_action" />

                <!-- Templates Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/templates"
                        android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                        android:textColor="@color/on_surface" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/textViewAllTemplates"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/all_templates"
                        android:textColor="@color/primary"
                        app:rippleColor="@color/primary_container" />

                </LinearLayout>

                <!-- Templates Grid - use GridLayout for tablets -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerTemplates"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="32dp"
                    android:clipToPadding="false"
                    android:overScrollMode="never"
                    tools:itemCount="4"
                    tools:listitem="@layout/item_template" />

                <!-- Fallback for compatibility with existing code -->
                <HorizontalScrollView
                    android:id="@+id/templatesScrollView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="32dp"
                    android:clipToPadding="false"
                    android:overScrollMode="never"
                    android:scrollbars="none"
                    android:visibility="gone">

                    <LinearLayout
                        android:id="@+id/layoutTemplates"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- Template Card: Resume -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cardTemplateResume"
                            android:layout_width="@dimen/template_card_width"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            android:clickable="true"
                            android:focusable="true"
                            app:cardBackgroundColor="@color/surface_container_low"
                            app:cardCornerRadius="@dimen/card_corner_radius"
                            app:cardElevation="0dp"
                            app:strokeColor="@color/outline_variant"
                            app:strokeWidth="1dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="24dp">

                                <com.google.android.material.card.MaterialCardView
                                    android:layout_width="@dimen/template_card_icon_size"
                                    android:layout_height="@dimen/template_card_icon_size"
                                    app:cardBackgroundColor="#E3F2FD"
                                    app:cardCornerRadius="16dp"
                                    app:cardElevation="0dp">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:padding="12dp"
                                        android:src="@drawable/ic_document"
                                        app:tint="@color/docx_color" />

                                </com.google.android.material.card.MaterialCardView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="16dp"
                                    android:text="Resume"
                                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                                    android:textColor="@color/on_surface" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="Professional CV"
                                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                                    android:textColor="@color/on_surface_variant" />

                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                        <!-- Template Card: Letter -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cardTemplateLetter"
                            android:layout_width="@dimen/template_card_width"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            android:clickable="true"
                            android:focusable="true"
                            app:cardBackgroundColor="@color/surface_container_low"
                            app:cardCornerRadius="@dimen/card_corner_radius"
                            app:cardElevation="0dp"
                            app:strokeColor="@color/outline_variant"
                            app:strokeWidth="1dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="24dp">

                                <com.google.android.material.card.MaterialCardView
                                    android:layout_width="@dimen/template_card_icon_size"
                                    android:layout_height="@dimen/template_card_icon_size"
                                    app:cardBackgroundColor="@color/primary_container"
                                    app:cardCornerRadius="16dp"
                                    app:cardElevation="0dp">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:padding="12dp"
                                        android:src="@drawable/ic_document"
                                        app:tint="@color/primary" />

                                </com.google.android.material.card.MaterialCardView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="16dp"
                                    android:text="Letter"
                                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                                    android:textColor="@color/on_surface" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="Formal Letter"
                                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                                    android:textColor="@color/on_surface_variant" />

                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                        <!-- Template Card: Invoice -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cardTemplateInvoice"
                            android:layout_width="@dimen/template_card_width"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            android:clickable="true"
                            android:focusable="true"
                            app:cardBackgroundColor="@color/surface_container_low"
                            app:cardCornerRadius="@dimen/card_corner_radius"
                            app:cardElevation="0dp"
                            app:strokeColor="@color/outline_variant"
                            app:strokeWidth="1dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="24dp">

                                <com.google.android.material.card.MaterialCardView
                                    android:layout_width="@dimen/template_card_icon_size"
                                    android:layout_height="@dimen/template_card_icon_size"
                                    app:cardBackgroundColor="#E8F5E9"
                                    app:cardCornerRadius="16dp"
                                    app:cardElevation="0dp">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:padding="12dp"
                                        android:src="@drawable/ic_document"
                                        app:tint="@color/xlsx_color" />

                                </com.google.android.material.card.MaterialCardView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="16dp"
                                    android:text="Invoice"
                                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                                    android:textColor="@color/on_surface" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="Billing Template"
                                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                                    android:textColor="@color/on_surface_variant" />

                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                        <!-- Template Card: Presentation -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cardTemplatePresentation"
                            android:layout_width="@dimen/template_card_width"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            android:clickable="true"
                            android:focusable="true"
                            app:cardBackgroundColor="@color/surface_container_low"
                            app:cardCornerRadius="@dimen/card_corner_radius"
                            app:cardElevation="0dp"
                            app:strokeColor="@color/outline_variant"
                            app:strokeWidth="1dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="24dp">

                                <com.google.android.material.card.MaterialCardView
                                    android:layout_width="@dimen/template_card_icon_size"
                                    android:layout_height="@dimen/template_card_icon_size"
                                    app:cardBackgroundColor="#FBE9E7"
                                    app:cardCornerRadius="16dp"
                                    app:cardElevation="0dp">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:padding="12dp"
                                        android:src="@drawable/ic_presentation"
                                        app:tint="@color/pptx_color" />

                                </com.google.android.material.card.MaterialCardView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="16dp"
                                    android:text="Presentation"
                                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                                    android:textColor="@color/on_surface" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="Business Slides"
                                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                                    android:textColor="@color/on_surface_variant" />

                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                    </LinearLayout>

                </HorizontalScrollView>

                <!-- Recent Files Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="@string/recent_files"
                    android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                    android:textColor="@color/on_surface" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerRecentFiles"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:overScrollMode="never"
                    tools:itemCount="3"
                    tools:listitem="@layout/item_recent_file" />

                <!-- Empty State -->
                <LinearLayout
                    android:id="@+id/emptyState"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingVertical="64dp"
                    android:visibility="visible">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:cardBackgroundColor="@color/surface_container"
                        app:cardCornerRadius="28dp"
                        app:cardElevation="0dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="24dp"
                            android:src="@drawable/ic_document"
                            app:tint="@color/on_surface_variant" />

                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:text="No recent files"
                        android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                        android:textColor="@color/on_surface" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Open a document to get started"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                        android:textColor="@color/on_surface_variant" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnEmptyStateOpen"
                        style="@style/Widget.Material3.Button.TonalButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="28dp"
                        android:text="Open a file"
                        app:cornerRadius="24dp"
                        app:icon="@drawable/ic_folder" />

                </LinearLayout>

            </LinearLayout>

        </FrameLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- FAB hidden on tablets (moved to navigation rail header) -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fabAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:text="Create"
        android:textAllCaps="false"
        android:visibility="gone"
        app:icon="@drawable/ic_add"
        app:shapeAppearance="@style/ShapeAppearance.OfficeSuite.FAB" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>

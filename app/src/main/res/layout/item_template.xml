<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:clickable="true"
    android:focusable="true"
    app:cardBackgroundColor="@color/surface_container_low"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="0dp"
    app:strokeColor="@color/outline_variant"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="@dimen/template_card_width"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardIcon"
            android:layout_width="@dimen/template_card_icon_size"
            android:layout_height="@dimen/template_card_icon_size"
            app:cardBackgroundColor="@color/primary_container"
            app:cardCornerRadius="14dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/imageIcon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:src="@drawable/ic_document"
                app:tint="@color/primary" />

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:maxLines="1"
            android:text="Template"
            android:textAppearance="@style/TextAppearance.Material3.TitleSmall"
            android:textColor="@color/on_surface" />

        <TextView
            android:id="@+id/textDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:maxLines="1"
            android:text="Description"
            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
            android:textColor="@color/on_surface_variant" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
